CREATE TABLE COMMUNITY(
    COMMUNITY_ID SERIAL PRIMARY KEY,
    COMMUNITY_NAME TEXT NOT NULL
);

CREATE TABLE CITY(
    CITY_ID SERIAL PRIMARY KEY,
    CITY_NAME TEXT NOT NULL
);

CREATE TABLE PARTICIPANT(
    PARTICIPANT_ID SERIAL PRIMARY KEY,
    COMMUNITY_ID INTEGER REFERENCES COMMUNITY(COMMUNITY_ID),
    CITY_ID INTEGER REFERENCES CITY(CITY_ID) NOT NULL,
    PARTICIPANT_NAME TEXT NOT NULL
);

CREATE TABLE ROOM(
    ROOM_ID SERIAL PRIMARY KEY,
    CITY_ID INTEGER REFERENCES CITY(CITY_ID) NOT NULL,
    ROOM_NAME TEXT NOT NULL
);

CREATE TABLE CONFERENCE(
    CONFERENCE_ID SERIAL PRIMARY KEY,
    CITY_ID INTEGER REFERENCES CITY(CITY_ID) NOT NULL,
    ROOM_ID INTEGER REFERENCES ROOM(ROOM_ID) NOT NULL,
    DATE_OF_HOLDING TEXT
);

CREATE TABLE COMMUNITY_ON_CONFERENCE(
    COMMUNITY_ID INTEGER REFERENCES COMMUNITY(COMMUNITY_ID) NOT NULL,
    CONFERENCE_ID INTEGER REFERENCES CONFERENCE(CONFERENCE_ID) NOT NULL
);

CREATE TABLE FURNITURE(
    FURNITURE_ID SERIAL PRIMARY KEY,
    ROOM_ID INTEGER REFERENCES ROOM(ROOM_ID),
    FURNITURE_NAME TEXT NOT NULL,
    DESCRIPTION TEXT
);

CREATE TABLE ACTION(
    ACTION_ID SERIAL PRIMARY KEY,
    DESCRIPTION TEXT NOT NULL
);

CREATE TABLE COMMUNITY_MAKES_ACTIONS(
    COMMUNITY_ID INTEGER REFERENCES COMMUNITY(COMMUNITY_ID) NOT NULL,
    ACTION_ID INTEGER REFERENCES ACTION(ACTION_ID) NOT NULL
);

CREATE TABLE COMMON_PLACE(
    COMMON_PLACE_ID SERIAL PRIMARY KEY,
    COMMON_PLACE_NAME TEXT NOT NULL
);

CREATE TABLE PLACE_MAKES_ACTIONS(
    PLACE_ID INTEGER REFERENCES COMMON_PLACE(COMMON_PLACE_ID) NOT NULL,
    ACTION_ID INTEGER REFERENCES ACTION(ACTION_ID) NOT NULL
);

CREATE TABLE PARTICIPANT_ON_CONFERENCE(
    PARTICIPANT_ID INTEGER REFERENCES PARTICIPANT(PARTICIPANT_ID) NOT NULL,
    CONFERENCE_ID INTEGER REFERENCES CONFERENCE(CONFERENCE_ID) NOT NULL
);


